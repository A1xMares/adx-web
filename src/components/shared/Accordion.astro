---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  details: string;
}

const { title, details } = Astro.props as Props;
---

<article
  class="accordion group relative rounded-xl border border-gray-200 bg-white shadow-sm"
>
  <button
    class="accordion__button flex w-full flex-1 items-center justify-between gap-2 p-3 text-left text-lg font-bold text-secondary transition hover:!text-primary sm:px-4"
    type="button"
    id={`${title} accordion menu button`}
    aria-expanded="false"
    aria-controls={`${title} accordion menu content`}
  >
    {title}
    <Icon
      name="material-symbols:add"
      aria-hidden="true"
      class="shrink-0 text-lg transition-transform group-[.active]:!hidden"
    />
    <Icon
      name="material-symbols:remove"
      aria-hidden="true"
      class="hidden shrink-0 text-lg transition-transform group-[.active]:!block"
    />
  </button>

  <div
    id={`${title} accordion menu content`}
    aria-labelledby={`${title} accordion menu button`}
    class="accordion__content hidden max-h-0 overflow-hidden px-3 transition-all duration-200 ease-in-out sm:px-4"
  >
    <p class="prose mb-4 mt-1 max-w-full transition-[height]">
      {details}
    </p>
  </div>
</article>

<script>
  function accordionSetup() {
    const accordionMenus = document.querySelectorAll(
      ".accordion"
    ) as NodeListOf<HTMLElement>;
    accordionMenus.forEach((accordionMenu) => {
      const accordionButton = accordionMenu.querySelector(
        ".accordion__button"
      ) as HTMLElement;
      const accordionContent = accordionMenu.querySelector(
        ".accordion__content"
      ) as HTMLElement;

      if (accordionButton && accordionContent) {
        accordionButton.addEventListener("click", (event) => {
          if (!accordionMenu.classList.contains("active")) {
            // if accordion is currently closed, so open it
            accordionMenu.classList.add("active");
            accordionButton.setAttribute("aria-expanded", "true");

            // set max-height to the height of the accordion content
            // this makes it animate properly
            accordionContent.classList.remove("hidden");
            accordionContent.style.maxHeight =
              accordionContent.scrollHeight + "px";
          } else {
            // accordion is currently open, so close it
            accordionMenu.classList.remove("active");
            accordionButton.setAttribute("aria-expanded", "false");

            // set max-height to the height of the accordion content
            // this makes it animate properly
            accordionContent.style.maxHeight = "0px";
            // delay to allow close animation
            setTimeout(() => {
              accordionContent.classList.add("hidden");
            }, 200);
          }
          event.preventDefault();
          return false;
        });
      }
    });
  }

  // runs on initial page load
  accordionSetup();
</script>
